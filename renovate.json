{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":automergePr",
    ":automergeMinor",
    ":combinePatchMinorReleases",
    ":semanticCommits",
    ":disableDependencyDashboard",
    "schedule:weekly"
  ],

  "labels": ["dependencies"],
  "timezone": "Europe/Warsaw",
  "rangeStrategy": "replace",
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "rebaseWhen": "behind-base-branch",
  "stopUpdatingLabel": "renovate-stop",
  "ignoreDeps": ["react-scripts"],
  "postUpdateOptions": ["npmDedupe"],
  "enabledManagers": ["poetry", "npm", "dockerfile", "github-actions"],
  "reviewers": ["bartekmp"],
  "suppressNotifications": ["prIgnoreNotification"],

  "separateMinorPatch": false,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,

  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": false,
    "prPriority": 100
  },

  "configMigration": true,

  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "enabled": true,
      "pinDigests": true
    },
    {
      "matchManagers": ["poetry"],
      "groupName": "Python dependencies",
      "labels": ["python"],
      "schedule": ["every weekend"]
    },
    {
      "matchManagers": ["npm"],
      "groupName": "Frontend (React) dependencies",
      "labels": ["frontend"],
      "schedule": ["every weekend"]
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "Docker base images",
      "labels": ["docker"],
      "schedule": ["monthly"],
      "pinDigests": true
    },
    {
      "matchPackagePrefixes": ["@types/"],
      "groupName": "TypeScript types",
      "automerge": true
    },
    {
      "matchPackageNames": ["react", "react-dom"],
      "groupName": "React core",
      "prPriority": 5
    },
    {
      "matchPackagePatterns": ["^@mui/"],
      "groupName": "Material-UI packages"
    },
    {
      "matchPackagePatterns": ["^eslint", "^@eslint/"],
      "groupName": "ESLint packages"
    },
    {
      "matchPackagePatterns": ["^@babel/"],
      "groupName": "Babel packages"
    },
    {
      "matchPackagePatterns": ["jest", "^@testing-library/"],
      "groupName": "Testing packages"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": true,
      "rangeStrategy": "widen"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["major update"],
      "prPriority": 10,
      "automerge": false,
      "groupName": null,
      "commitMessagePrefix": "BREAKING:"
    }
  ]
}
